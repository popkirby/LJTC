env:
  node: true
  es6: true
  browser: true

ecmaFeatures:
  modules: true
  jsx: true

rules:
  indent: [2, 2]
  brace-style: [2, "1tbs"]
  comma-style: [2, "last"]
  default-case: 2
  no-floating-decimal: 2
  no-nested-ternary: 2
  no-undefined: 2
  quotes: [2, "single", "avoid-escape"]
  radix: 2
  strict: [2, "global"]
  valid-jsdoc: 2
  wrap-iife: 2
  
